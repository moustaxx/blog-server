{
	"compilerOptions": {
		"lib": ["esnext"],
		"module": "commonjs",
		"moduleResolution": "node",
		"alwaysStrict": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictBindCallApply": true,
		"strictFunctionTypes": true,
		"sourceMap": true
	},
	"include": [
		"./*.js",
		"./src/**/*.ts",
		"./typings/**/*.ts"
	],
	"exclude": ["node_modules"]
}
